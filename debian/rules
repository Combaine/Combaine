#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


%:
	dh  $@

PACKAGE_PATH=$(CURDIR)/src/github.com/noxiouz/Combaine
DEB_DESTDIR=$(CURDIR)/debian/combaine

export GOPATH=$(CURDIR)

override_dh_auto_build:
	mkdir -p $(PACKAGE_PATH)
	ln -sf $(CURDIR)/combainer $(PACKAGE_PATH)/combainer
	echo $(GOPATH)
	go get launchpad.net/goyaml
	go get github.com/cocaine/cocaine-framework-go/cocaine
	go get launchpad.net/gozk/zookeeper
	go build -o main_combainer combainer_main.go
	dh_auto_build

override_dh_install:
	install -d $(DEB_DESTDIR)/usr/bin
	cp main_combainer $(DEB_DESTDIR)/usr/bin/combainer
	dh_install

override_dh_clean:
	rm -rf $(CURDIR)/src
	rm -rf $(CURDIR)/pkg
	dh_clean

