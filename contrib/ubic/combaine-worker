use Ubic::Service::SimpleDaemon;
my $service = Ubic::Service::SimpleDaemon->new(
    name => 'combaine-worker',
    daemon_user => 'cocaine',
    auto_start => 1,
    stdout => '/var/log/cocaine-core/worker.log',
    stderr => '/var/log/cocaine-core/worker.log',
    bin => '/usr/bin/combaine-worker -logoutput=/var/log/cocaine-core/worker.log',
    ulimit => { RLIMIT_NOFILE => 65535 },
);
